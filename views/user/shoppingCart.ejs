                            <div class="col-9 col5-col12">
                                <span><a href="/productOverview?id=<%= item.productID._id %>">
                                        <%= item.productID.ProductName %>
                                    </a></span>
                                <p style="font-weight: bold;">Size: <%= item.size %>
                                </p>

                                <p style="font-weight: bold;" class="availability">
                                    <% item.productID.ProductSize.forEach((size, index)=> { %>
                                        <% if (size.size==item.size) { %>
                                            <% if(size.quantity < 1){ %>
                                                Out Of Stock
                                                <% } else { %>
                                                    In Stock
                                                    <% } %>
                                                        <% } %>
                                                            <% }) %>
                                </p>
                            </div>

                        </div>

                        <div class="col-2 colms2">
                            <p style="font-size: 14pt; padding-right: 15px;"><i class="fa-solid fa-indian-rupee-sign"
                                    style=" font-size:13pt; padding-right: 5px;"></i>
                                <%= item.productID.SalesRate %>
                            </p> -â‚¹<span class="discount" id="discount<%=index%>"style="text-decoration: line-through;color:rgb(63, 63, 63);">
                                <%=(item.productID.SalesRate*item.productID.DiscountPrecentage / 100) * item.quantity %>
                            </span>
                        </div>
                        <div class="col-2 colms2">
                            <div class="quantity">
                                <div class="proQty">
                                    <input type="button"
                                        onclick="quantityIncrement('<%=index%>','<%= item.productID.SalesRate %>','decrement')"
                                        id="decrement<%=index%>" class="inc-dec" value="-">
                                    <input type="text" class="Qty" id="showQty<%=index%>" readonly
                                        value="<%=item.quantity%>">
                                    <input type="button" id="increment<%=index%>"
                                        onclick="quantityIncrement('<%=index%>','<%= item.productID.SalesRate %>','increment')"
                                        class="inc-dec" value="+">
                                </div>
                            </div>
                        </div>
                        <div class="col-2 colms2">
                            <!-- <p class="totalAmount" id="totalPrice" style="font-size: 13pt; font-family: Poppins;"> -->
