                            <input type="text" id="totalPrice<%=index%>" class="TotalAmount" readonly
                                value=" <%= item.productID.SalesRate * item.quantity %>">
                            <!-- </p> -->
                        </div>
                        <div class="col-1 colms2">
                            <div class="cart__close">
                                <form action="/shoppingcart?task=deleteCartItem&_method=DELETE&id=<%=item._id%>" method="POST">
