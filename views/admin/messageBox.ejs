<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css">

    <link href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet'>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"/>

    <link rel="stylesheet" href="/assets/css/admin/dashboard.css">
</head>
<body>
    <div class="container-fluid conF-1">
        <div class="row navRow">
            <div class="col-6 ">
                <a href="/use/index" class="logo">
                    <img src="/assets/images/logo.png">
                </a>
            </div>
            <div class="col-4">
                <a href="" class="messageShow">
                    <i class="fa-solid fa-bell" style="color: #999999;"></i>
                </a>
                <p class="msgCount">2</p>
            </div>
            <div class="col-2">
                <a href="adminLogout" class="logout">
                    <img src="/assets/images/logout.png" class="logoutImg"><span>Logout</span>
                </a>
            </div>
        </div>
    </div>


    <div class="container-fluid mt-5" style="margin: 0;padding-left: 10;padding-right: 10;">
        <% requestedData.forEach((val) => { %> 
        <div class="row" style="min-height: 120px;display: flex;flex-direction: column;margin: 0;padding: 0;background-color: #f2f2f2;border-radius: 4px;">
           
            <div class="row">
                <div class="col-5" style="height: 120px;">
                   <div class="row" style="display: flex;align-items: center;height: 120px;padding-left: 20px;">
                    <div class="col-3" >
                        <img src="<%= val.productID.files[0].url %>" style="width: 100px;height: 100px;" alt="">
                    </div>
                    <div class="col-9">
                        <p><%= val.productID.ProductName %> <br> <%= val.Amount %> <br><%= val.Quantity %></p>
                    </div>
                   </div>
                </div>
                <div class="col-3" style="height: 120px;display: flex;flex-direction: column;align-items: center;justify-content: center;">
                    <p style="font-size: 13pt;padding-left: 20px;padding-top: 10px;font-weight: 600;">From <%= val.userID.emailAddress %></p>
                    <p><%= val.requestReason %></p>
                </div>
                <div class="col-2" style="height: 120px;display: flex;align-items: center;justify-content: center;">
                    <p><%= val.reqDate.toLocaleDateString() %></p>
                </div>
                <div class="col-2" style="display: flex;align-items: center;justify-content: center;">
                    <a href=""  style="width: 60px;height: 60px;border-radius: 50%;background-color: rgb(221, 221, 221); margin-left: 10px;display: flex;align-items: center;justify-content: center;">
                        <i class="fa-solid fa-xmark" style="color: #000000;font-size: 21pt;"></i>
                    </a>
                    <a  onclick="updateReqest('<%=val._id%>')" style="width: 60px;height: 60px;border-radius: 50%; margin-left: 10px;background-color: rgb(221, 221, 221);display: flex;align-items: center;justify-content: center;">
                        <i class="fa-solid fa-check" style="color: #000000;font-size: 21pt;"></i>
                    </a>
                    
                </div>
            </div>
        </div>

        <% }) %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>
        function updateReqest(id){
            console.log(id)
            axios.patch('/adminLogin/messageBox?_method=PUT', {id}) // Sending productID as data
            .then(function (response) {
                // Handle success response if needed
            })
            .catch(function (error) {
                console.error('Error adding product to cart:', error);
                // Handle error if needed
            });
        }
    </script>


</body>
</html>